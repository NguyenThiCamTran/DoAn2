@model CuaHangTapHoas.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100" style="background-color: lightgray;">

        <div class="w-25 shadow p-4 bg-white rounded " style="margin-bottom: 20px;">           
                <h2 class="text-center" style="color: blue;">Đăng nhập</h2>

                @using (Html.BeginForm("Login", "TaiKhoan", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group fw-bold">
                        @Html.LabelFor(m => m.TenDangNhap, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.TenDangNhap)
                        </div>
                    </div>
                    <div class="form-group fw-bold">
                        @Html.LabelFor(m => m.MatKhau, new { @class = "control-label" })
                        <div>
                            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MatKhau)
                        </div>
                    </div>

                    <div class="form-group text-end mb-3">
                        <!-- Added margin-bottom for spacing -->
                        <div class="mt-3">
                            <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                        </div>
                    </div>
                }
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
