@model CuaHangTapHoas.Models.LoaiSanPham

@{
    ViewBag.Title = "DeleteLoaiSP";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div>
    <div class="card shadow-sm mt-2 mx-3">
        <div class="card-body">
            <h4><i class="fa-solid fa-trash-can text-success"></i> Xóa loại sản phẩm</h4>
        </div>
    </div>
    <div class="card mt-4 shadow-sm mx-3">
        <div class="card-body">
            <h3>Bạn có chắc chắn muốn xóa loại sản phẩm này không?</h3>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.tenLoaiSanPham)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.tenLoaiSanPham)
                </dd>

            </dl>

            @using (Html.BeginForm("DeleteConfirmed", "LoaiSP", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.maLoaiSanPham) <!-- Make sure this field is present and correct -->
                <div class="d-flex align-items-center mt-3 gap-3">
                    <div>
                        @Html.ActionLink("Trở về", "ContentLoaiSP", "", new { @class = "btn btn-primary" })
                    </div>
                    <div class="form-actions no-color">
                        <input type="submit" value="Thực hiện xóa" class="btn btn-danger" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>