@model CuaHangTapHoas.ViewModels.HoaDonViewModel
@{
    <title>In Hóa Đơn - @Model.maHoaDon</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    ViewBag.Title = "PrintInvoice";

}


<main onload="window.print()">
    <div class="container mt-5">
        <h2 class="text-center">Hóa Đơn - @Model.maHoaDon</h2>
        <p><strong>Ngày lập:</strong> @Model.NgayLap.ToString("dd/MM/yyyy")</p>
        <p><strong>Tên tài khoản:</strong> @Model.tenDangNhap</p>

        <h4>Chi Tiết Sản Phẩm</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Tên Sản Phẩm</th>
                    <th>Số Lượng</th>
                    <th>Đơn Giá</th>
                    <th>Thành Tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.TenSanPham</td>
                        <td>@product.SoLuong</td>
                        <td>@product.GiaBan</td>
                        <td>@(product.SoLuong * product.GiaBan)</td>
                    </tr>
                }
            </tbody>
        </table>
        <p><strong>Tổng Tiền:</strong> @Model.TongTien</p>
        <p><strong>Trạng Thái:</strong> @Model.TrangThai</p>
    </div>
</main>

